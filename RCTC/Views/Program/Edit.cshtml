@model RCTC.Models.Programs

@{
    ViewData["Title"] = "Edit";
}

<h1 class="content-header pb-3">Update Program</h1>

<hr />

<form asp-action="Edit" asp-controller="Program">

    <div class="container-fluid">
        <div class="form-row ">
          
            <div class="form-group col-md-12">
                <input asp-for="PID" class="form-control" value="@Model.PID" hidden/>
                <label asp-for="PName">Program Name</label>
                <input asp-for="PName" class="form-control" />
            </div>

        </div>

        <div class="form-row ">
            <div class="form-group col-md-6">
                <label>Total Cost</label>
                <input asp-for="Cost" class="form-control" />
            </div>
            <div class="form-group col-md-6">
                <label>Program Duration</label>
                <input asp-for="Period" class="form-control" />
            </div>
        </div>

        <div class="form-row ">
            <div class="form-group col-md-12">
                <label>Program Descriptions</label>
                <textarea asp-for="PDescriptions" class="form-control" rows="4" id="text-area"></textarea>
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <button type="submit" class="btn btn-info btn-block">Update</button>
        </div>
        <div class="form-group col-md-6">
            <button type="reset" class="btn btn-danger btn-block">Clear</button>
        </div>
    </div>

</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

